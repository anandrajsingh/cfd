generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              String           @id @default(cuid())
  email           String           @unique
  password        String
  balance         Int              @default(500000)
  orders          ActiveOrder[]
  positions       Position[]
  closedPositions ClosedPosition[]
}

model ActiveOrder {
  id String @id @default(cuid())

  asset Asset
  type  TradeType
  orderType OrderType
  limitPrice Int?

  margin Int
  leverage Int
  takeProfit Int?
  stopLoss Int?
  state OrderState @default(CREATED)

  userId String
  user   User   @relation(fields: [userId], references: [id])
}

model Position {
  id               String    @id @default(cuid())
  asset            Asset
  type             TradeType
  margin           Int
  leverage         Int
  entryPrice       Int
  positionSize     Int
  liquidationPrice Int
  takeProfit       Int?
  stopLoss         Int?
  openedAt         DateTime  @default(now())
  userId           String
  user             User      @relation(fields: [userId], references: [id])
}

model ClosedPosition {
  id           String    @id @default(cuid())
  asset        Asset
  type         TradeType
  margin       Int
  leverage     Int
  entryPrice   Int
  exitPrice    Int
  positionSize Int
  realizedPnl  Int
  openedAt     DateTime
  closedAt     DateTime  @default(now())
  userId       String
  user         User      @relation(fields: [userId], references: [id])
}

model PriceTick {
  time  DateTime
  asset Asset
  price BigInt

  @@id([asset, time])
  @@index([asset, time])
}

enum OrderType {
  MARKET
  LIMIT
}

enum OrderState {
  CREATED
  ACTIVE
  FILLED
  CANCELLED
}

enum TradeType {
  LONG
  SHORT
}

enum Asset {
  BTC
  SOL
  ETH
}
