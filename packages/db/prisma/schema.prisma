generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              String           @id @default(cuid())
  email           String           @unique
  password        String
  balance         Int              @default(500000)
  positions       Position[]
  closedPositions ClosedPosition[]
}

model Position {
  id               String    @id @default(cuid())
  asset            Asset
  type             TradeType
  margin           Int
  leverage         Int
  entryPrice       Int
  positionSize     Int
  liquidationPrice Int
  takeProfit       Int?
  stopLoss         Int?
  openedAt         DateTime  @default(now())
  userId           String
  user             User      @relation(fields: [userId], references: [id])
}

model ClosedPosition {
  id           String    @id @default(cuid())
  asset        Asset
  type         TradeType
  margin       Int
  leverage     Int
  entryPrice   Int
  exitPrice    Int
  positionSize Int
  realizedPnl  Int
  openedAt     DateTime
  closedAt     DateTime  @default(now())
  userId       String
  user         User      @relation(fields: [userId], references: [id])
}

enum TradeType {
  LONG
  SHORT
}

enum Asset {
  BTC
  SOL
  ETH
}
